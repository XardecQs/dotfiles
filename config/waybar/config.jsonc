{
  "layer": "top",
  "position": "top",
  "height": 30,
  "spacing": 10,
  "reload_style_on_change": true,
  // M√≥dulos en orden de izquierda a derecha
  "modules-left": ["sway/workspaces"],
  "modules-center": ["sway/window"],
  "modules-right": ["network", "pulseaudio", "clock"],

  // --- Configuraci√≥n individual de m√≥dulos ---
  "sway/workspaces": {
    "disable-scroll": false,
    "all-outputs": true,
    "format": "{name}: {icon}",
